// Function Definitions ////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////


// ALFA 011 Ophidian Guardpost. Teric neDhalir 22/03/09




void main() 

{
int iRoll = (d3() + 1);
int i = 1;
int iPercent = d100();

if (iPercent <= 25)
	{         

			do 
			{ACR_SpawnObject("sjc_enc_ophidian", OBJECT_TYPE_CREATURE);
    		i++;
			} while (i <= iRoll);
    }       
}