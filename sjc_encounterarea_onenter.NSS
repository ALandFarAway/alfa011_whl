//! The main event handler.
void main();

////////////////////////////////////////////////////////////////////////////////
// Function Definitions ////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

void main() {
    ACR_AreaOnEnter();

    // Custom code goes below this line.
	object oEnterer = GetEnteringObject();
	if (GetIsPC(oEnterer) && !GetIsDM(oEnterer))
		{
		int iPCCount = GetLocalInt(OBJECT_SELF, "sjc_PCCount");
		iPCCount++;
		SetLocalInt(OBJECT_SELF, "sjc_PCCount", iPCCount);
		//string sPCCount = IntToString(iPCCount);
		//SendMessageToPC(GetFirstPC(), "PCs in area = " + sPCCount);
		}
	
		
		
	if (GetLocalInt(OBJECT_SELF, "sjc_PCCount") == 1)
		{
		//object oArea = OBJECT_SELF;
		object oWP = GetFirstObjectInArea();
		while (oWP != OBJECT_INVALID)
			{
			string sTag = GetTag(oWP);
			string sFound = GetName(oWP);
			if (sTag == "ACR_SPAWN_WP")
				{
				ACR_SetIsSpawnPointEnabled(oWP, 1, 1);
				//SendMessageToPC(GetFirstPC(), "Changing Spawn Point " + sFound);
				}
			oWP = GetNextObjectInArea();
			}
		}
}