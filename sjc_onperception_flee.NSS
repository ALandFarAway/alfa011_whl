void main()
{
    int iRating = GetLocalInt(OBJECT_SELF,"SJC_MORALERATING");
		
	if  (iRating == 0)
		{ClearAllActions(TRUE);
		ActionMoveAwayFromObject(GetLastPerceived(),TRUE,60.0f);}


	else
	{ACR_CreatureOnPerception();}

    // Custom code goes here.
}