void main()
{
    ACR_CreatureOnHeartBeat();

    // Custom code goes here.
		int nRandom=Random(3);
	if (nRandom==0)
	{
		PlayCustomAnimation(OBJECT_SELF,"dance01", 1);
		
	}
	else if (nRandom==1)
	{
		PlayCustomAnimation(OBJECT_SELF,"dance02", 1);
		
	}
	else
	{
		PlayCustomAnimation(OBJECT_SELF,"dance03", 1);
		
	}
}