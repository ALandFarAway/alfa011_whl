void main()
{
    ACR_CreatureOnHeartBeat();

    // Custom code goes here.
	// Ambient audience effects. Teric neDhalir 22/5/08
	SetFacingPoint(GetPosition(GetObjectByTag("sjc_004_stage")));
		

	int nRandom=d4();
	if (nRandom==1)
	{
		PlayCustomAnimation(OBJECT_SELF,"clapping", 1);
		PlaySound("as_pl_singclap1");
	}
	else if (nRandom==2)
	{
		PlayCustomAnimation(OBJECT_SELF,"chuckle", 1);
		PlaySound("as_pl_laughingf2");
	}
	else
	{
		PlayCustomAnimation(OBJECT_SELF,"idle", 1);
		
	}
}