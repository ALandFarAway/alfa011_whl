//! The main event handler.
void main();

////////////////////////////////////////////////////////////////////////////////
// Function Definitions ////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

void main() {
    ACR_AreaOnEnter();

// Custom code goes below this line.

// Check to see if objects in area
// are persistent, and reset to value
// at last mod reset.
// Teric 281109
	
object oArea = GetArea(OBJECT_SELF);

if (GetLocalInt(oArea, "SJC_IsInitialised") == 1) {return;}
	

object oTested = GetFirstObjectInArea();
while (GetIsObjectValid(oTested))
	{
	
	if (GetLocalInt(oTested, "SJC_ISPERSISTENTOBJECT") == 1)
	{
	int iLockState = ACR_GetPersistentInt(oTested, "SJC_PLOCK_FINISHED");
	int iTrapState = ACR_GetPersistentInt(oTested, "SJC_PTRAP_FINISHED");
	int iDestroyedState = ACR_GetPersistentInt(oTested, "SJC_POBJECT_DESTROYED");
	
	if (iLockState == 1) {SetLocked(oTested, 0);}
	if (iTrapState == 1) {SetTrapDisabled(oTested);}
	if (iDestroyedState == 1) {DestroyObject(oTested);}	
	}
	
	oTested = GetNextObjectInArea();
		
	}	
	
SetLocalInt(oArea, "SJC_IsInitialised", 1);	
	
	
	
}